# AI Provider Configuration
# Copy this file to .env and update the values

# Options: "chatgpt" or "ollama"
LLM=ollama

# Model to use
# For ChatGPT: gpt-3.5-turbo, gpt-4, etc.
# For Ollama: llama2, mistral, codellama, etc.
MODEL=llama2

# OpenAI API Key (only needed if LLM=chatgpt)
OPENAI_API_KEY=your_api_key_here

# Database Configuration
# SQLite (default - local file database)
DATABASE_URL=sqlite:///./grocery_list.db

# PostgreSQL (uncomment to use)
# DATABASE_URL=postgresql://user:password@localhost/grocery_list

# MySQL (uncomment to use)
# DATABASE_URL=mysql+pymysql://user:password@localhost/grocery_list

API_PORT=8000

SERVICE_NAME=Grocery List AI
SERVICE_DESCRIPTION=AI-powered Grocery List Application
