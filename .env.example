# Docker Compose Environment Variables
# Copy this file to .env and update the values before running docker-compose up

# ============================================
# Frontend Configuration
# ============================================

# API URL for the frontend (used at build time)
# For Docker Compose: http://localhost:5002 (maps to host)
# For production: your actual backend URL
VITE_API_URL=http://localhost:5002

# ============================================
# Backend Configuration
# ============================================

# AI Provider Configuration
# Options: "chatgpt" or "ollama"
LLM=chatgpt

# Model to use
# For ChatGPT: gpt-3.5-turbo, gpt-4, gpt-4-turbo, etc.
# For Ollama: llama2, mistral, codellama, etc.
MODEL=gpt-3.5-turbo

# OpenAI API Key (REQUIRED if LLM=chatgpt)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# PostgreSQL connection string (external/managed database)
DATABASE_URL=postgresql://user:password@hostname:5432/grocery_list

# Service Information
SERVICE_NAME=Grocery List AI
SERVICE_DESCRIPTION=AI-powered Grocery List Application

# API Server Configuration
API_PORT=5002

# Frontend Server Configuration
FRONTEND_PORT=82
